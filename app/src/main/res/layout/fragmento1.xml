<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmento1">

    <ImageView
        android:layout_width="143dp"
        android:layout_height="147dp"
        android:src="@drawable/escudo_itt_grande"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:id="@+id/imagen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instituto Tecnológico de Tepic"
        android:layout_below="@+id/imagen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/titulo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono: 311 211 9400"
        android:layout_below="@+id/titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/telefono"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección:\n Av. Tecnológico 2595,
        \nLagos del Country, 63175 Tepic, Nay."
        android:textAlignment="center"
        android:layout_below="@+id/telefono"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/direccion"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lema: Sabiduría tecnológica, pasión de nuestro espíritu"
        android:textAlignment="center"
        android:layout_below="@+id/direccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/lema"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#NoMeRepruebesBenigno"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20sp"
        android:layout_above="@id/ayuda2"
        android:id="@+id/ayuda1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(C) Derechos Reservados Benjamín Zepeda"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20sp"
        android:id="@+id/ayuda2"/>

</RelativeLayout>